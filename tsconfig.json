{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ],
	"paths": {
		"@/*": ["src/*"],
		"@/core/*": ["src/core/*"],
		"@/domain/*": ["src/domain/*"],
		"@/application/*": ["src/application/*"],
		"@/infrastructure/*": ["src/infrastructure/*"],
		"@/presentation/*": ["src/presentation/*"],
		"@/types/*": ["src/types/*"],
		"@plugin": ["main.ts"]
	}
  },
	"include": [
		"main.ts",
		"src/**/*.ts",
		"src/**/*.d.ts",
		"scripts/**/*.ts",
		"__mocks__/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"docs",
		"coverage",
		"tmp",
		"dist",
		"src/**/__tests__/**",
		"**/*.test.ts",
		"src/presentation/components/chat/chat-view.component.ts"
	]
}
